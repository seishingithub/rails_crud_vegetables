<%= form_for @vegetable do |f| %>
  <p>
    <%= f.label :vegetable_type %>
    <%= f.text_field :vegetable_type %>
  </p>
  <p>
    <%= f.label :color %>
    <%= f.text_field :color %>
  </p>
  <p>
    <%= f.submit 'Create Vegetable' %>
  </p>
<% end %>

<% @vegetables.each do |vegetable| %>
  <ul>
    <li>
      <%= vegetable.vegetable_type %>, <%= vegetable.color %>
    </li>
  </ul>
<% end %>